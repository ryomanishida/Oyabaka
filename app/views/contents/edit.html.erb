
<%= render 'layouts/navber' %>
<div class="containar my-5">
  <% if flash[:alert] %>
    <% flash.each do |alert, message| %>
      <div class="alert alert-danger mx-5 mt-5">
        <%= message %>
      </div>
    <% end %>
  <% end %>
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-auto shadow-lg my-5">
      <h5 class="form-title bg-light p-4">画像投稿フォーム</h5>
      <div class="form-body p-4">
        <div class= "card-img-spase mb-2">
          <%= image_tag @content.img.url, class: "img" %>
        </div>
        <% @content.categories.each do |tag| %>
          <span class="badge badge-pill badge-dark mb-2">
            <%= tag.tag_name %>
          </span>
        <% end %>
        <%= form_with model:@content, local:true do |f| %>
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control mb-3" %>
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control mb-3" %>
          <%= f.label :tag %><%= "　　"%><span class="text-secondary"><%= t("dictionary.sentence.example") %></span><br>
          <%= f.text_field :tag_names,class: "form-control" %>
          <hr>
          <%= link_to t("dictionary.button.delete"), content_path(@content), method: :delete, data: {confirm: "投稿を削除します。よろしいですか？"}, class: "btn btn-danger mr-5" %>
          <%= f.submit t("dictionary.button.update"), class: "btn btn-info ml-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>