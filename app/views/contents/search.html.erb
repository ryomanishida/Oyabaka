<%= render 'layouts/navber' %>
<div class= "container">
  <div class="row my-4">
    <h4 class="font"><%= t("dictionary.words.tags") %></h4>
    <% @tags.each do |tag| %>
      <%= link_to tag.tag_name, category_path(tag), class: "badge badge-pill badge-dark mt-4 ml-2" %>
    <% end %>
  </div>
  <h2 class="font"><%= t("dictionary.words.ranking") %></h2>
  <div class="row">
      <% @ranks.each.with_index(1) do |content, i| %>
      <div class="col-sm-12 col-lg-4">
        <% if i==1 %>
          <%= image_tag "crown-k.jpg", class: "icon" %>
        <% elsif i==2 %>
          <%= image_tag "crown-g.jpg", class: "icon" %>
        <% elsif i==3 %>
          <%= image_tag "crown-d.jpg", class: "icon" %>
        <% end %>
        No.<%= i %>
        <div class="card card-size mb-5 shadow-lg">
          <div class="imgs-spase">
            <%= image_tag content.img.url, "/contents/#{content.id}", class: "card-img-trim" %>
          </div>
          <div class="card-body">
            <% if content.user.profile_image? %>
              <%= image_tag content.user.profile_image.url, class: "icon" %>
            <% else %>
              <%= image_tag 'no_image.jpg', class: "icon" %>
            <% end %>
            <%= content.title.truncate(10) %><br>
            <%= content.user.name %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
  <hr>
  <div class="d-flex">
    <div class="row">
      <%= render 'layouts/content' %>
    </div>
  </div>
  <%= render 'layouts/back' %>
</div>
