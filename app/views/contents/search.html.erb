<%= render 'layouts/searchnav' %>

<div class= "sidebar">
  <%= t ("dictionary.words.tag_list") %>
  <% @tags.each do |tag| %>
    <%= link_to category_path(tag) do %>
    <div class= "badge badge-pill badge-secondary">
      <%= tag.tag_name %>
    </div>
    <% end %>
  <% end %>
  <%= t ("dictionary.words.ranking") %>
  <% @ranks.each.with_index(1) do |content, i| %>
    <%= link_to content_path(content) do %>
      <%= i %>‰Ωç
      <%= content.title %>
    <% end %>
  <% end %>
</div>
<div class= "container">
  <div class="row">
    <% @contents.each do |content| %>
      <div class="col col-3">
        <%= link_to content_path(content) do %>
          <%= image_tag content.img.url, class: 'imgs-trim' %>
        <% end %>
        <% if content.user.profile_image? %>
          <%= image_tag content.user.profile_image.url, class:'icon' %>
        <% else %>
            <image src="/assets/no_image.jpg" class="icon" %>
        <% end %>
        <%= content.title%>
        <%= content.user.name %>
      </div>
    <% end %>
  </div>
</div>