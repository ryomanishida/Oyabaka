<%= render 'layouts/navber' %>
<div class="container my-5">
  <div class="row">
    <div class="col-2">
      <%= link_to new_content_album_path do %>
        <i class="fas fa-folder-plus fas-size-album"></i>
      <% end %>
    </div>
    <% @albums.each do |album| %>
      <div class="row">
        <div class="col-2">
          <%= link_to album_path(album) do %>
            <i class="fas fa-folder fas-size-album"></i>
            <%= album.album_name %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
