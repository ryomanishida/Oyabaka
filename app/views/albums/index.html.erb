<%= render 'layouts/navber' %>
<div class="container my-5">
  <div class="row">
    <div class="col-2">
      <%= link_to new_content_album_path do %>
        <i class="fas fa-folder-plus fas-size-album"></i>
      <% end %>
    </div>
    <table class="table table-striped mt-5">
      <thead>
        <tr>
          <th>アルバム名</th>
          <th>保存枚数</th>
        </tr>
        <% @albums.each do |album| %>
        <tr>
          <th>
            <%= link_to album_path(album) do %>
              <%= album.album_name %>
            <% end %>
          </th>
          <th>
            <%= album.content_albums.count %>
          </th>
        </tr>
        <% end %>
      </thead>
    </table>
  </div>
</div>
