<%= render 'layouts/navber' %>
<div class="container my-5">
  <div class="d-flex">
    <div class="row">
    <% @likes.each do |like| %>
      <div class="col">
        <div class="card mx-3 my-5 shadow-lg" style="width: 18rem;">
          <%= link_to content_path(like.content) do %>
            <%= image_tag like.content.img.url, class: "imgs-trim width=100%" %>
          <% end %>
          <div class="card-body">
            <% if like.content.user.profile_image? %>
              <%= image_tag like.content.user.profile_image.url, class:"icon" %>
            <% else %>
                <image src="/assets/no_image.jpg" class="icon" %>
            <% end %>
            <%= like.content.title%>
            <%= like.content.user.name %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>