<%= render 'layouts/navber' %>
<div class="container my-5">
  <% if @user.profile_image? %>
    <%= image_tag @user.profile_image.url, class:'icon' %>
  <% else %>
    <%= image_tag 'no_image.jpg', class: "icon" %>
  <% end %>
  <%= @user.name %>
  <%= @user.self_introduction %>
  <% if user_signed_in? && !current_user&.admin %>
    <%= render 'relationships/follow_button', user: @user %>
  <% end %>

  <div class="d-flex">
    <div class="row">
    <% @contents.each do |content| %>
      <div class="col">
        <div class="card card-size mx-3 my-5 shadow-lg">
          <div class="imgs-spase">
            <%= link_to content_path(content) do %>
              <%= image_tag content.img.url, class: "card-img-trim" %>
            <% end %>
          </div>
          <div class="card-body">
            <%= content.title.truncate(10) %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>