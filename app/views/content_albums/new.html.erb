<%= render 'layouts/navber' %>
<% if flash[:alert] %>
  <% flash.each do |alert, message| %>
    <div class="alert alert-danger mx-5 mt-5">
      <%= message %>
    </div>
  <% end %>
<% end %>
<div class="container my-5">
  <%= form_with model:@content_album, local: true do |f| %>
    <%= f.label :album_name %>
    <%= f.text_field :album_name %>
    <div class="d-flex">
      <div class="row ml-5 my-4">
      <%= f.collection_check_boxes :content_id, @contents, :id, :img do |b| %>
        <div class="position-relative pr-3">
          <%= b.label do %>
            <%= b.check_box class: "position-absolute checkbox-size-big" %>
            <%= image_tag b.text.url, class: "content-album-imgs" %>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
    <%= f.submit t("dictionary.button.save"), class: "btn btn-success" %>
  <% end %>
</div>
