                    <% else %>
                        <image src="/assets/no_image.jpg" class="icon" >
                    <% end %>
                  </div>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <%= link_to user_path(current_user.id), class: "dropdown-item" do %>
                      <i class="fas fa-user">マイページ</i>
