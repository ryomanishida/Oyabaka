<%= render 'layouts/navber' %>
<div class="container my-5">
  <% @contents.each do |content| %>
    <div class="col">
      <div class="card card-size mx-3 my-5 shadow-lg">
        <%= link_to content_path(content) do %>
          <%= image_tag content.img.url, class: "imgs-trim width=100%" %>
        <% end %>
        <div class="card-body">
          <% if content.user.profile_image? %>
            <%= image_tag content.user.profile_image.url, class:"icon" %>
          <% else %>
              <%= image_tag 'no_image.jpg', class: "icon" %>
          <% end %>
          <%= content.title %>
          <%= content.user.name %>
        </div>
      </div>
    </div>
  <% end %>
</div>
