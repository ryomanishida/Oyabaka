<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
        <h1 class="font">親バカ</h1>
        <% if flash[:alert] %>
          <% flash.each do |alert, message| %>
            <div class="alert alert-danger mx-5 mt-5">
              <% message2 = message.gsub(",","<br>") %>
              <%= message2.html_safe %>
              <!--.html_safeで<br>が文字列されるのを防ぐ-->
            </div>
          <% end %>
        <% end %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control mb-2" %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-2" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t("dictionary.sentence.characters_minimum") %>)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>
          <div class="actions">
            <%= f.submit t("dictionary.button.sign_up"), class: "btn btn-block btn-info my-4" %>
          </div>
        <% end %>
        <div><%= t("dictionary.sentence.those_who_have_an_account") %></div>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>